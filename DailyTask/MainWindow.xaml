<Window x:Class="DailyTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DailyTask"
        xmlns:vm="clr-namespace:DailyTask.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:DailyRecordsViewModel/>
    </Window.DataContext>
    <TabControl>
        <TabItem Header="Daily">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <DataGrid ItemsSource="{Binding ALLRecord}" Grid.Row="0" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding JL}" Header="JL"/>
                        <DataGridTextColumn Binding="{Binding YL}" Header="YL"/>
                        <DataGridTextColumn Binding="{Binding Study}" Header="Study"/>
                        <DataGridCheckBoxColumn Binding="{Binding GitHub}" Header="GitHub"/>
                        <DataGridCheckBoxColumn Binding="{Binding Eng}" Header="Eng"/>
                        <DataGridTextColumn Binding="{Binding Score}" Header="Score"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
        <TabItem Header="password"></TabItem>
    </TabControl>
</Window>
